<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/publish_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    >

    <ImageView
        android:id="@+id/publish_user_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/user_icon_default_main" />

    <TextView
        android:id="@+id/publish_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/publish_user_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/publish_user_icon"
        android:text="破军上交"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/publish_shuoshuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/publish_user_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        
        android:id="@+id/publish_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_shuoshuo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/bg_pic_loading" 
        />

    <TextView
        android:id="@+id/item_action_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_action_comment"
        android:layout_alignBottom="@+id/item_action_comment"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/item_action_comment"
        android:drawableLeft="@drawable/ic_action_share"
        android:gravity="center"
        android:text="分享"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/item_action_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_action_share"
        android:layout_alignBottom="@+id/item_action_share"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/item_action_share"
        android:drawableLeft="@drawable/ic_action_love"
        android:gravity="center"
        android:text="985"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/publish_user_icon"
        android:layout_alignLeft="@+id/publish_username"
        android:text="发表于"
        android:textColor="#888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/publish_shuoshuo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/time_label"
        android:text="2014.6.6"
        android:textColor="#888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/publish_img"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_comment"
        android:gravity="center"
        android:text="评论"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/left_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/publish_username"
        android:layout_alignBottom="@+id/publish_username"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/publish_username"
        android:text="《"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/left_label"
        android:layout_alignBottom="@+id/left_label"
        android:layout_toRightOf="@+id/left_label"
        android:text="出水"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/right_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title"
        android:layout_toRightOf="@+id/title"
        android:text="》"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/delete_label"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/item_action_comment"
        android:layout_alignTop="@+id/right_label"
        android:src="@drawable/delete" 
        android:visibility="gone"
        />

</RelativeLayout>